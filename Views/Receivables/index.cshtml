@{

    ViewData["Title"] = "Sharentach Trading Inc. | Receivables";
}

<div class="header">RECEIVABLES</div>
<div class="upper-nav">
    <ul class="nav-options">
        <li><a asp-area="" asp-controller="Home" asp-action="#">Details</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">Reference No.</a></li>
    </ul>
</div>

<div class="upper-box" style="height: 305px;">
    <form method="post">
        <!-- row 1 -->
        <label class="text" style="top: 20px; left: 17px;" for="accountNo">Account #:</label>
        <div class="input-box" style="width:263px; top: 48px; left: 17px">
            <input type="text" class="input" name="accountNo" placeholder="Enter here" />
        </div>
        <label class="text" style="top: 20px; left: 295px;" for="dealer">Dealer:</label>
        <div class="input-box" style="width:263px; top: 48px; left: 295px">
            <input type="text" class="input" placeholder="Enter here" name="dealer">
        </div>
        <label class="text" style="top: 20px; left: 575px;" for="bankName">Bank Name:</label>
        <div class="input-box" style="width:263px; top: 48px; left: 575px">
            <input type="text" class="input" placeholder="Enter here" name="bankName">
        </div>
        <label class="text" style="top: 20px; left: 855px;" for="checkNo">Check #:</label>
        <div class="input-box" style="width:263px; top: 48px; left: 855px">
            <input type="text" class="input" placeholder="Enter here" name="checkNo">
        </div>
        <!-- row 2 -->
        <label class="text" style="top: 115px; left: 17px;" for="payToTheOrderOf">Pay To the Order of:</label>
        <div class="input-box" style="width:263px; top: 140px; left: 17px">
            <input type="text" class="input" placeholder="Enter here" name="payToTheOrderOf">
        </div>
        <label class="text" style="top: 115px; left: 295px;" for="dateIssued">Date Issued:</label>
        <div class="input-box" style="width:263px; top: 140px; left: 295px">
            <input type="text" class="input" placeholder="Enter here" name="dateIssued">
        </div>
        <label class="text" style="top: 115px; left: 575px;" for="dateDue">Date Due:</label>
        <div class="input-box" style="width:263px; top: 140px; left: 575px">
            <input type="text" class="input" placeholder="Enter here" name="dateDue">
        </div>
        <label class="text" style="top: 115px; left: 855px;" for="rtNo">RT #:</label>
        <div class="input-box" style="width:263px; top: 140px; left: 855px">
            <input type="text" class="input" placeholder="Enter here" name="rtNo">
        </div>
        <!-- row 3 -->
        <label class="text" style="top: 205px; left: 17px;" for="amount">Amount:</label>
        <div class="input-box" style="width:263px; top: 230px; left: 17px">
            <input type="text" class="input" placeholder="Enter here" name="amount">
        </div>
        <label class="text" style="top: 205px; left: 295px;" for="status">Status:</label>
        <div class="input-box" style="width:263px; top: 230px; left: 295px">
            <input type="text" class="input" placeholder="Enter here" name="status">
        </div>
        <label class="text" style="top: 205px; left: 575px;" for="remarks">Remarks:</label>
        <div class="input-box" style="width:360px; top: 230px; left: 575px">
            <input type="text" class="input" placeholder="Enter here" name="remarks">
        </div>
        <div class="save-cancel">
            <input class="save-button" style="margin-top:240px; margin-left: 990px" type="submit" value="Save" />
            <button class="cancel-button" style="margin-top:240px; margin-right: 20px">Cancel</button>
        </div>
    </form>
</div>

<div class="lower-box" style="height: 360px; top: 375px;">
</div>