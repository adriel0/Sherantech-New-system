<div class="tabcontent" id="Particulars">
    <form method="post">
        <div class="upper-body">
            <div class="form large">
                <label class="form-text" for="DealerBusinessName">Business Name:</label>
                <input type="text" class="form-type" name="DealerBusinessName" placeholder="Enter here" value="@Model.Current.DealerBusinessName" />
            </div>
            <div class="form large">
                <label class="form-text" for="DealerAddress">Address:</label>
                <input type="text" class="form-type" name="DealerAddress" placeholder="Enter here" value="@Model.Current.DealerAddress" />
            </div>
            <div class="form">
                <label class="form-text" for="DealerTelNo">Telephone #:</label>
                <input type="text" class="form-type" name="DealerTelNo" placeholder="Enter here" value="@Model.Current.DealerTelNo" />
            </div>
            <div class="form">
                <label class="form-text" for="DealerCellNo">Cellphone #:</label>
                <input type="text" class="form-type" name="DealerCellNo" placeholder="Enter here" value="@Model.Current.DealerCellNo" />
            </div>
            <div class="form">
                <label class="form-text" for="DealerFaxNo">Fax #:</label>
                <input type="text" class="form-type" name="DealerFaxNo" placeholder="Enter here" value="@Model.Current.DealerFaxNo" />
            </div>
            <div class="form large">
                <label class="form-text" for="DealerBusinessType">Business Type:</label>
                <input type="text" class="form-type" name="DealerBusinessType" placeholder="Enter here" value="@Model.Current.DealerBusinessType" />
            </div>
            <div class="form large">
                <label class="form-text" for="DealerDateIssued">Date Issued:</label>
                <input type="text" class="form-type" name="DealerDateIssued" placeholder="Enter here" value="@Model.Current.DealerDateIssued" />
            </div>
            <div class="form">
                <label class="form-text" for="DealerSecNo">Sec #:</label>
                <input type="text" class="form-type" name="DealerSecNo" placeholder="Enter here" value="@Model.Current.DealerSecNo" />
            </div>
            <div class="form">
                <label class="form-text" for="DealerEmail">Email:</label>
                <input type="text" class="form-type" name="DealerEmail" placeholder="Enter here" value="@Model.Current.DealerEmail" />
            </div>
            <div class="form">
                <label class="form-text" for="DealerWebsite">Website:</label>
                <input type="text" class="form-type" name="DealerWebsite" placeholder="Enter here" value="@Model.Current.DealerWebsite" />
            </div>
            <div class="form large">
                <label class="form-text" for="DealerAuthorizationCapital">Authorization Capital:</label>
                <input type="text" class="form-type" name="DealerAuthorizationCapital" placeholder="Enter here" value="@Model.Current.DealerAuthorizationCapital" />
            </div>
            <div class="form large">
                <label class="form-text" for="DealerSubscribedCapital">Subscribed Capital:</label>
                <input type="text" class="form-type" name="DealerSubscribedCapital" placeholder="Enter here" value="@Model.Current.DealerSubscribedCapital" />
            </div>
            <div class="form large">
                <label class="form-text" for="DealerPaidUpCapital">Paid Up Capital:</label>
                <input type="text" class="form-type" name="DealerPaidUpCapital" placeholder="Enter here" value="@Model.Current.DealerPaidUpCapital" />
            </div>
            <div class="form large">
                <label class="form-text" for="DealerTerms">Terms:</label>
                @* <input type="text" class="form-type" name="DealerTerms" placeholder="Enter here" value="@Model.Current.DealerTerms" /> *@
                <select class="form-type" name="DealerTerms" id="termsselector" value="audi">
                    <option value="volvo">Volvo</option>
                    <option value="saab">Saab</option>
                    <option value="fiat">Fiat</option>
                    <option value="audi">Audi</option>
                </select>
            </div>
            <div class="form">
                <label class="form-text" for="DTIRegNo">DTI Registration #:</label>
                <input type="text" class="form-type" name="DTIRegNo" placeholder="Enter here" value="@Model.Current.DTIRegNo" />
            </div>
            <div class="form">
                <label class="form-text" for="DTIDateIssued">DTI Date Issued:</label>
                <input type="text" class="form-type" name="DTIDateIssued" placeholder="Enter here" value="@Model.Current.DTIDateIssued" />
            </div>
            <div class="form">
                <label class="form-text" for="DTIAmtCapital">DTI Amnt. Capital:</label>
                <input type="text" class="form-type" name="DTIAmtCapital" placeholder="Enter here" value="@Model.Current.DTIAmtCapital" />
            </div>
            <div class="form">
                <label class="form-text" for="DTIPaidUpCapital">DTI Paid Up Capital:</label>
                <input type="text" class="form-type" name="DTIPaidUpCapital" placeholder="Enter here" value="@Model.Current.DTIPaidUpCapital" />
            </div>
            <div class="form">
                <label class="form-text" for="DTITaxAcctNo">DTI Tax Account #:</label>
                <input type="text" class="form-type" name="DTITaxAcctNo" placeholder="Enter here" value="@Model.Current.DTITaxAcctNo" />
            </div>

            <div class="button-horizontal">
                <input type="submit" class="button" asp-area="" asp-controller="Dealers" asp-action="edit" asp-route-id="@Model.Current.Id" value="Save">
                <input type="submit" class="button" asp-area="" asp-controller="Dealers" asp-action="index" asp-route-id="@Model.Current.Id" value="Cancel">
                <button onclick='document.getElementById("deletebutton").click();' class="button"><a style="text-decoration:none; color:inherit;" asp-area="" asp-controller="Dealers" asp-action="delete" asp-route-id="@Model.Current.Id" id="deletebutton">Delete</a></button>
            </div>
        </div>
    </form>
</div>

<div class="tabcontent" id="Bank">
    <div>
        <div class="upper-body">
            <table class="scroll" cellpadding="5" width="100%">
                <tr>
                    <th>
                        accountNo
                    </th>
                    <th>
                        accountName
                    </th>
                    <th>
                        type
                    </th>
                    <th>
                        bank
                    </th>
                </tr>
                @foreach (var i in Model.CurrentBankRef)
                {
                    <tr>
                        <td>
                            @i.accountNo
                        </td>
                        <td>
                            @i.accountName
                        </td>
                        <td>
                            @i.type
                        </td>
                        <td>
                            @i.bank
                        </td>
                        <td>
                            <a asp-area="" asp-controller="Dealers" asp-action="EditBankRef" asp-route-id="@i.Id" asp-route-dealerid="@i.dealerId">
                                edit
                            </a>
                        </td>
                    </tr>
                }
            </table>
            <div class="button-vertical">
                <button onclick='document.getElementById("addbankrefbutton").click();' class="button"><a style="text-decoration:none; color:inherit;" asp-area="" asp-controller="Dealers" asp-action="addBankRef" asp-route-id="@Model.Current.Id" id="addbankrefbutton">Add</a></button>
            </div>
        </div>
    </div>
</div>

<div class="tabcontent" id="Agents">
