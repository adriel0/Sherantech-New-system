@{
    
    ViewData["Title"] = "Sharentach Trading Inc. | Delivery Receipts";
}

<div class="header">DELIVERY RECEIPTS</div>
<div class="upper-nav">
    <ul class="nav-options">
        <li><a asp-area="" asp-controller="Home" asp-action="#">Details</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">Items</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">Serials</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">References</a></li>
    </ul>
</div>

<div class="upper-box" style="height: 385px;">
    <form method="post">
        <!-- row 1 -->
        <label class="text" style="top: 20px; left: 17px;" for="drNo">DR #:</label>
        <div class="input-box" style="width:280px; top: 48px; left: 17px">
            <input type="text" class="input" name="drNo" placeholder="Enter here" />
        </div>
        <label class="text" style="top: 20px; left: 308px;" for="invoiceNo">Invoice #:</label>
        <div class="input-box" style="width:280px; top: 48px; left: 308px">
            <input type="text" class="input" placeholder="Enter here" name="invoiceNo">
        </div>
        <label class="text" style="top: 20px; left: 600px;" for="soldTo">Sold To:</label>
        <div class="input-box" style="width:165px; top: 48px; left: 600px">
            <input type="text" class="input" placeholder="Enter here" name="soldTo">
        </div>
        <label class="text" style="top: 20px; left: 600px;" for="dateSold">Date Sold:</label>
        <div class="input-box" style="width:165px; top: 48px; left: 600px">
            <input type="text" class="input" placeholder="Enter here" name="dateSold">
        </div>
        <label class="text" style="top: 20px; left: 780px;" for="terms">Terms:</label>
        <div class="input-box" style="width:165px; top: 48px; left: 780px">
            <input type="text" class="input" placeholder="Enter here" name="terms">
        </div>
        <div class="save-cancel">
            <input class="save-button" style="margin-top:320px; margin-left: 990px" type="submit" value="Save" />
            <button class="cancel-button" style="margin-top:320px; margin-right: 20px">Cancel</button>
        </div>
    </form>
</div>
