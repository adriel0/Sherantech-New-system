@{
    
    ViewData["Title"] = "Sharentach Trading Inc. | Delivery Receipts";
}

<div class="header">DELIVERY RECEIPTS</div>
<div class="upper-nav">
    <ul class="nav-options">
        <li><a asp-area="" asp-controller="Home" asp-action="#">Details</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">Items</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">Serials</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">References</a></li>
    </ul>
</div>

<div class="upper-box">
    <form method="post">
        <label class="text" style="top: 20px; left: 17px;" for="drNo">DR#:</label>
        <div class="input-box" style="top: 48px; left: 20px">
            <input type="text" class="input" name="drNo" placeholder="Enter here" />
        </div>
        <label class="text" style="top: 20px; left: 350px;" for="invoiceNo">Invoice#:</label>
        <div class="input-box" style="top: 48px; left: 350px">
            <input type="text" class="input" placeholder="Enter here" name="invoiceNo">
        </div>
        <label class="text" style="top: 20px; left: 680px;" for="terms">Terms:</label>
        <div class="input-box" style="top: 48px; left: 680px">
            <input type="text" class="input" placeholder="Enter here" name="terms">
        </div>
        <label class="text" style="top: 115px; left: 15px;" for="soldTo">Sold To:</label>
        <div class="input-box" style="top: 140px; left: 20px">
            <input type="text" class="input" placeholder="Enter here" name="soldTo">
        </div>
        <label class="text" style="top: 115px; left: 350px;" for="dateSold">Date Sold:</label>
        <div class="input-box" style="top: 140px; left: 350px">
            <input type="text" class="input" placeholder="Enter here" name="dateSold">
        </div>

        <div class="save-cancel">
            <input class="save-button" style="margin-top:160px; margin-left: 950px" type="submit" value="Save" />
            <button class="cancel-button" style="margin-top:160px; margin-right: 55px">Cancel</button>
        </div>
    </form>
</div>
<div class="lower-box" style="height: 460px; top: 275px;">
</div>
