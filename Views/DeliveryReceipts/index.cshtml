@{
    
    ViewData["Title"] = "Sharentach Trading Inc. | Delivery Receipts";
}

<div class="header">DELIVERY RECEIPTS</div>
<div class="upper-nav">
    <ul class="nav-options">
        <li><a asp-area="" asp-controller="Home" asp-action="#">Details</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">Items</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">Serials</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">References</a></li>
    </ul>
</div>

<form method="post">
    <div class="upper-body">
        <div class="form large">
            <label class="form-text" for="drNo">DR #:</label>
            <input type="text" class="form-type" name="drNo" placeholder="Enter here" />
        </div>
        <div class="form large">
            <label class="form-text" for="invoiceNo">Invoice #:</label>
            <input type="text" class="form-type" name="invoiceNo" placeholder="Enter here" />
        </div>
        <div class="form large">
            <label class="form-text" for="terms">Terms:</label>
            <input type="text" class="form-type" name="terms" placeholder="Enter here" />
        </div>
        <div class="form large">
            <label class="form-text" for="soldTo">Sold To:</label>
            <input type="text" class="form-type" name="soldTo" placeholder="Enter here" />
        </div>
        <div class="form large">
            <label class="form-text" for="dateSold">Date Sold:</label>
            <input type="text" class="form-type" name="dateSold" placeholder="Enter here" />
        </div>

        <div class="button-horizontal">
            <button type="submit" class="button">New Term</button>
            <input type="submit" class="button" value="Save" />
            <button type="submit" class="button">Cancel</button>
        </div>
    </div>
</form>

<div class="lower-body">
    <div class="filter-form">
        <label class="filter-text" for="#">Filter</label>
        <input type="text" class="filter-type" name="#" value="" />
    </div>
    <div class="button-vertical">
        <button type="submit" class="button">Add</button>
        <button type="submit" class="button">Edit</button>
        <button type="submit" class="button">Delete</button>
        <button type="submit" class="button">Jump DR</button>
        <button type="submit" class="button">Print DR</button>
        <button type="submit" class="button">Print SI</button>
    </div>
</div>
