@{

    ViewData["Title"] = "Sharentach Trading Inc. | Purchases";
}

<div class="header">PURCHASES</div>
<div class="upper-nav">
    <ul class="nav-options">
        <li><a class="tablinks" onclick="openTab(event, 'Details')" id="default">Details</a></li>
        <li><a class="tablinks" onclick="openTab(event, 'Item')">Items</a></li>
    </ul>
</div>

<div class="tabcontent" id="Details">
    <form method="post">
        <div class="upper-body">
            <div class="form large">
                <label class="form-text" for="PurchaseReferenceNo">Reference #:</label>
                <input type="text" class="form-type" name="PurchaseReferenceNo" placeholder="Enter here" value="@Model.Current.referenceNo"/>
            </div>
            <div class="form large">
                <label class="form-text" for="PurchaseReceivedBy">Received By:</label>
                <input type="text" class="form-type" name="PurchaseReceivedBy" placeholder="Enter here" value="@Model.Current.receivedBy"/>
            </div>
            <div class="form xlarge">
                <label class="form-text" for="PurchasePurchasedFrom">Purchased From:</label>
                <input type="text" class="form-type" name="PurchasePurchasedFrom" placeholder="Enter here" value="@Model.Current.purchasedFrom"/>
            </div>
            <div class="form large">
                <label class="form-text" for="PurchaseDatePurchased">Date Purchased:</label>
                <input type="text" class="form-type" name="PurchaseDatePurchased" placeholder="Enter here" value="@Model.Current.datePurchased"/>
            </div>

            <div class="button-horizontal">
                <label class="check">
                    <input type="checkbox" class="check-space" name="PurchaseClosed">Close Transaction
                </label>
                <input type="submit" class="button" value="Save" />
                <button type="submit" class="button">Cancel</button>
            </div>
        </div>
    </form>
</div>

<div class="tabcontent" id="Item">
    <div>
        <div class="upper-body">
            <table class="scroll" cellpadding="5" width="100%">
                <tr>
                    <th>
                        qty
                    </th>
                    <th>
                        unit
                    </th>
                    <th>
                        stockNo
                    </th>
                    <th>
                        unitPrice
                    </th>
                    <th>
                        amount
                    </th>
                    <th>
                        remarks
                    </th>
                </tr>
                @foreach (var i in Model.CurrentItems)
                {
                    <tr>
                        <td>
                            @i.qty
                        </td>
                        <td>
                            @i.unit
                        </td>
                        <td>
                            @i.stockName
                        </td>
                        <td>
                            @i.unitPrice
                        </td>
                        <td>
                            @i.amount
                        </td>
                        <td>
                            @i.remarks
                        </td>
                    </tr>
                }
            </table>

            <div class="button-vertical">
                <button type="submit" class="button">Add</button>
                <button type="submit" class="button">Edit</button>
                <button type="submit" class="button">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="lower-body">
    <div class="filter-form">
        <label class="filter-text" for="#">Filter</label>
        <input type="text" class="filter-type" name="#" value="" />
    </div>
    <div class="scroll">
        <table cellpadding="5" width="100%">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    PurchaseReferenceNo
                </th>
                <th>
                    PurchaseReceivedBy
                </th>
                <th>
                    PurchasePurchasedFrom
                </th>
                <th>
                    PurchaseDatePurchased
                </th>
                <th>
                    PurchaseClosed
                </th>
            </tr>

            @foreach (var i in Model.Details)
            {
                <tr>
                    <td>
                        <a asp-area="" asp-controller="Purchases" asp-action="index" asp-route-id="@i.Id">
                            @i.Id
                        </a>
                    </td>
                    <td>
                        @i.referenceNo
                    </td>
                    <td>
                        @i.receivedBy
                    </td>
                    <td>
                        @i.purchasedFrom
                    </td>
                    <td>
                        @i.datePurchased
                    </td>
                    <td>
                        @i.closed
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="button-vertical">
        <button type="submit" class="button">Add</button>
        <button type="submit" class="button">Edit</button>
        <button type="submit" class="button">Delete</button>
    </div>
</div>

