@{

    ViewData["Title"] = "Sharentach Trading Inc. | Purchases";
}

<div class="header">PURCHASES</div>
<div class="upper-nav">
    <ul class="nav-options">
        <li><a asp-area="" asp-controller="Home" asp-action="#">Details</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">Items</a></li>
    </ul>
</div>

<<div class="upper-box">
    <form method="post">
        <label class="text" style="top: 20px; left: 17px;" for="referenceNo">Reference #:</label>
        <div class="input-box" style="top: 48px; left: 20px">
            <input type="text" class="input" name="referenceNo" placeholder="Enter here" />
        </div>
        <label class="text" style="top: 20px; left: 350px;" for="receivedBy">Received by:</label>
        <div class="input-box" style="top: 48px; left: 350px">
            <input type="text" class="input" placeholder="Enter here" name="receivedBy">
        </div>
        <label class="text" style="top: 115px; left: 15px;" for="purchasedFrom">Purchased From:</label>
        <div class="input-box" style="top: 140px; left: 20px">
            <input type="text" class="input" placeholder="Enter here" name="purchasedFrom">
        </div>
        <label class="text" style="top: 115px; left: 350px;" for="datePurchased">Date Purchased:</label>
        <div class="input-box" style="top: 140px; left: 350px">
            <input type="text" class="input" placeholder="Enter here" name="datePurchased">
        </div>
        <div class="save-cancel">
            <input class="save-button" style="margin-top:160px; margin-left: 950px" type="submit" value="Save" />
            <button class="cancel-button" style="margin-top:160px; margin-right: 55px">Cancel</button>
        </div>
    </form>
</div>
<div class="lower-box" style="height: 460px; top: 275px;">
</div>