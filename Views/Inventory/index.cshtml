@{

    ViewData["Title"] = "Sharentach Trading Inc. | Stocks";
}

<div class="header">STOCKS</div>
<div class="upper-nav">
    <ul class="nav-options">
        <li><a asp-area="" asp-controller="Home" asp-action="#">Details</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">Items</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">Serials</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="#">References</a></li>
    </ul>
</div>

<div class="upper-box" style="height: 240px;">
    <form method="post">
        <label class="text" style="top: 20px; left: 17px;" for="name">Name:</label>
        <div class="input-box" style="top: 48px; left: 20px">
            <input type="text" class="input" name="name" placeholder="Enter here" />
        </div>
        <label class="text" style="top: 20px; left: 350px;" for="category">Category:</label>
        <div class="input-box" style="top: 48px; left: 350px">
            <input type="text" class="input" placeholder="Enter here" name="category">
        </div>
        <label class="text" style="top: 20px; left: 680px;" for="unitPrice">Unit Price:</label>
        <div class="input-box" style="top: 48px; left: 680px">
            <input type="text" class="input" placeholder="Enter here" name="unitPrice">
        </div>
        <label class="text" style="top: 115px; left: 15px;" for="description">Description:</label>
        <div class="input-box" style="top: 140px; left: 20px; width:400px; height:75px;">
            <input type="text" class="input" placeholder="Enter here" name="description">
        </div>
        <div class="save-cancel">
            <input class="save-button" style="margin-top:160px; margin-left: 950px" type="submit" value="Save" />
            <button class="cancel-button" style="margin-top:160px; margin-right: 55px">Cancel</button>
        </div>
    </form>
</div>
<div class="lower-box" style="height: 430px; top: 305px;">
</div>
<form action="#">
    <div class="upper-body">
        <div class="form xlarge">
            <label class="form-text for="#">Name:</label>
            <input type="text" class="form-type" name="#" value="" />
        </div>
        <div class="form large">
            <label class="form-text for="#">Category:</label>
            <input type="text" class="form-type" name="#" value="" />
        </div>
        <div class="form large">
            <label class="form-text for="#">Unit Price:</label>
            <input type="text" class="form-type" name="#" value="" />
        </div>
        <div class="form xlarge">
            <label class="form-text for="#">Description:</label>
            <input type="text" class="form-type" name="#" value="" />
        </div>

        <div class="button-horizontal">
            <button type="submit" class="button">Save</button>
            <button type="submit" class="button">Cancel</button>
        </div>
    </div>
</form>

<div class="lower-body">
    <div class="filter-form">
        <label class="filter-text" for="#">Filter</label>
        <input type="text" class="filter-type" name="#" value="" />
    </div>
    <div class="button-vertical">
        <button type="submit" class="button">Add</button>
        <button type="submit" class="button">Edit</button>
        <button type="submit" class="button">Delete</button>
    </div>
</div>